class Book {
    constructor(title, author, publicationYear) {
        this.title = title;
        this.author = author;
        this.publicationYear = publicationYear;
    }

    displayInfo() {
        console.log(`${this.title} by ${this.author}, published in ${this.publicationYear}`);
    }
}

class Library {
    constructor(name) {
        this.name = name;
        this.books = [];
    }

    addBook(book) {
        this.books.push(book);
        console.log(`${book.title} added to ${this.name} library.`);
    }

    displayBooks() {
        console.log(`Books in ${this.name} library:`);
        this.books.forEach(book => book.displayInfo());
    }

    findBooksByAuthor(author) {
        const authorBooks = this.books.filter(book => book.author === author);
        console.log(`Books by ${author} in ${this.name} library:`);
        authorBooks.forEach(book => book.displayInfo());
    }
}

// Create books
const book1 = new Book("The Great Gatsby", "F. Scott Fitzgerald", 1925);
const book2 = new Book("To Kill a Mockingbird", "Harper Lee", 1960);
const book3 = new Book("1984", "George Orwell", 1949);

// Create a library
const myLibrary = new Library("My Personal Library");

// Add books to the library
myLibrary.addBook(book1);
myLibrary.addBook(book2);
myLibrary.addBook(book3);

// Display all books in the library
myLibrary.displayBooks();

// Find books by a specific author
myLibrary.findBooksByAuthor("Harper Lee");
